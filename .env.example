# BoilerAI - Computer Science Academic Planner (Structured-KB-first, RAG-off)
# Copy this file to .env and update with your actual values

# Database Configuration
# PostgreSQL connection string for SQLAlchemy
DATABASE_URL=postgresql://app:app@localhost:5432/boilerai

# Application Settings
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Security Settings
# Comma-separated list of allowed origins for CORS
# Use "*" for development only, specify exact domains for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Trusted hosts for production (comma-separated)
# Only used when ENVIRONMENT=production
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com

# API Keys and External Services
# TODO: Add your AI service API keys here
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (if implemented)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL_SECONDS=3600

# Monitoring and Observability
# SENTRY_DSN=your_sentry_dsn_here
# METRICS_ENABLED=true

# Development Settings
# Enable/disable API documentation endpoints
ENABLE_DOCS=true

# Database Pool Settings (optional overrides)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE_SECONDS=3600

# Session Management
# SESSION_SECRET_KEY=your_secret_key_here
# SESSION_EXPIRE_MINUTES=30