{
  "name": "boiler-ai-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "cd prisma && npx prisma migrate deploy",
    "db:seed": "cd prisma && npx prisma db seed",
    "observability:up": "docker compose -f infra/docker-compose.observability.yml up -d",
    "observability:down": "docker compose -f infra/docker-compose.observability.yml down"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}