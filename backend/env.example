# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5001
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/purdue-planner
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=5000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_ISSUER=purdue-academic-planner
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# CORS Configuration (production only - comma separated URLs)
ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
JSON_LIMIT=10mb

# Email Configuration
EMAIL_SERVICE=outlook
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@outlook.com
EMAIL_PASS=your-app-password

# Test User Configuration (development only)
TEST_USER_EMAIL=testdev@purdue.edu
TEST_USER_PASSWORD=DevPassword2024!

# Logging Configuration
LOG_LEVEL=debug

# Performance Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# AI Service Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Development Tools
ENABLE_MONGOOSE_DEBUG=false
ENABLE_REQUEST_LOGGING=true 