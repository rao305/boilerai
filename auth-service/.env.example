# Database
DATABASE_URL="postgresql://username:password@localhost:5432/purdue_auth"

# Redis
REDIS_URL="redis://localhost:6379"

# Azure AD Configuration
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="purdue-tenant-id-or-leave-empty-for-validation"

# Application
NODE_ENV="development"
PORT=4000
SESSION_SECRET="your-super-secret-session-key-min-32-chars"
JWT_SECRET="your-jwt-secret-key-min-32-chars"

# CORS
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Feature Flags
FALLBACK_MAGIC_LINK=false
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true

# Email (for magic link fallback only)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Monitoring
ENABLE_TELEMETRY=true
LOG_LEVEL="info"

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="30d"
MAGIC_LINK_EXPIRES_IN="10m"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=10
RATE_LIMIT_SKIP_SUCCESS=true