  "smartcourse_integration": {
    "evaluation_metrics": {
      "plan_score": {
        "description": "Fraction of recommendations that satisfy unmet plan requirements",
        "formula": "|R ∩ P| / |R|"
      },
      "personal_score": {
        "description": "Fraction addressing plan requirements or suggesting retakes",
        "formula": "|R ∩ (P ∪ L)| / |R|"
      },
      "lift": {
        "description": "Improvement from personalizing to low grades",
        "formula": "PersonalScore - PlanScore"
      },
      "recall": {
        "description": "Coverage of remaining plan courses",
        "formula": "|R ∩ P| / |P|"
      }
    },
    "context_modes": [
      "full_context",
      "no_transcript", 
      "no_plan",
      "question_only"
    ]
  }
